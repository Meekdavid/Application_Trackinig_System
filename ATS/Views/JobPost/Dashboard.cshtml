@model IEnumerable<JobPost>

@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<h2>Coordinator Dashboard</h2>

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Location</th>
            <th>Company</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Location</td>
                <td>@job.CompanyName</td>
                <td>
                    <form asp-action="ApproveJob" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@job.JobPostId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <a asp-action="AssignRecruiter" asp-route-jobId="@job.JobPostId" class="btn btn-primary">Assign Recruiter</a>
                </td>
            </tr>
        }
    </tbody>
</table>
