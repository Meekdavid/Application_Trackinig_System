@model IEnumerable<JobPost>

@{
    ViewData["Title"] = "Recruiter Dashboard";
}

<h2>Recruiter Dashboard</h2>

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Location</th>
            <th>Company</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.JobTitle</td>
                <td>@job.Location</td>
                <td>@job.CompanyName</td>
                <td>
                    <a asp-action="ReviewApplications" asp-route-jobId="@job.JobPostId" class="btn btn-primary">Review Applications</a>
                </td>
            </tr>
        }
    </tbody>
</table>
